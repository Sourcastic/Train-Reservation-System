<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TableColumn?>

<?import javafx.scene.control.TableView?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.trainreservationsystem.controllers.ClearBookingsController"> <padding> <Insets top="20" right="20" bottom="20" left="20"/> </padding>

    <Label text="Expired / Invalid Bookings" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="expiredTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="Booking ID" prefWidth="100"/>
            <TableColumn fx:id="userColumn" text="User ID" prefWidth="100"/>
            <TableColumn fx:id="scheduleColumn" text="Schedule ID" prefWidth="120"/>
            <TableColumn fx:id="journeyDateColumn" text="Journey Date" prefWidth="150"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
        </columns>
    </TableView>

    <Button fx:id="clearButton" text="Clear Selected Bookings" prefWidth="250"/>

</VBox>

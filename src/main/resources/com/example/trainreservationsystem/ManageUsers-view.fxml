<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.trainreservationsystem.controllers.ManageUsersController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Manage Users" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="userTable" prefHeight="450">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
            <TableColumn fx:id="colUsername" text="Username" prefWidth="200"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="250"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button fx:id="btnEdit" text="Edit" onAction="#handleEdit"/>
        <Button fx:id="btnDeactivate" text="Deactivate" onAction="#handleDeactivate"/>
        <Button fx:id="btnDelete" text="Delete" onAction="#handleDelete"/>
    </HBox>

</VBox>

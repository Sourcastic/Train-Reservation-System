<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="20" style="-fx-background-color: #ECF0F1;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trainreservationsystem.controllers.admin.ManageRoutesController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    
    <!-- LEFT SECTION: List of Routes -->
    <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" HBox.hgrow="ALWAYS">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="All Routes" />
        
        <TableView fx:id="routesTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="40" text="ID" />
                <TableColumn fx:id="sourceColumn" prefWidth="120" text="Source" />
                <TableColumn fx:id="destinationColumn" prefWidth="120" text="Destination" />
                <TableColumn fx:id="distanceColumn" prefWidth="90" text="Distance" />
                <TableColumn fx:id="priceColumn" prefWidth="80" text="Price" />
                <TableColumn fx:id="actionColumn" prefWidth="80" text="Action" />
            </columns>
        </TableView>
    </VBox>
    
    <!-- RIGHT SECTION: Add Route Form -->
    <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" HBox.hgrow="ALWAYS">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Add New Route" />
        
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495E;" text="Route Segments" />
            
            <ScrollPane fitToWidth="true" prefHeight="500" style="-fx-background: transparent; -fx-background-color: transparent;">
                <VBox fx:id="segmentsContainer" spacing="10" />
            </ScrollPane>
        </VBox>
      <HBox>
         <children>
            <Region HBox.hgrow="ALWAYS" />
              
              <Button fx:id="addRouteButton" onAction="#handleAddRoute" prefHeight="45" prefWidth="200" style="-fx-background-color: #1ABC9C; -fx-text-fill: white; -fx-font-size: 15; -fx-background-radius: 10;" text="Add Route" />
            <Region HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
        
        <Label fx:id="messageLabel" style="-fx-font-size: 14px; -fx-text-fill: #27AE60;" text="" wrapText="true" />
    </VBox>
    
</HBox>

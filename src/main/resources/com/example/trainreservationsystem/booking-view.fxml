<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.trainreservationsystem.controllers.BookingController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    <Label text="Book Seat" styleClass="searchbox-label"/>
    <Label fx:id="trainDetailsLabel" style="-fx-font-weight: bold;"/>

    <TextField fx:id="seatField" promptText="Seat Number"/>
    <TextField fx:id="nameField" promptText="Passenger Name"/>
    <TextField fx:id="ageField" promptText="Passenger Age"/>

    <Button text="Confirm Booking" onAction="#handleConfirm"/>
</VBox>


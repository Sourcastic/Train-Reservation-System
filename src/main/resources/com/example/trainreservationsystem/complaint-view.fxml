<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trainreservationsystem.controllers.ComplaintController">
    <center>
        <VBox alignment="CENTER" maxWidth="500.0" spacing="20.0" styleClass="form-card">
            <padding>
                <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
            </padding>
            <Label styleClass="page-title" text="Submit Complaint / Feedback" />

            <VBox maxWidth="Infinity" spacing="8.0">
                <Label style="-fx-font-weight: bold;" text="Subject" />
                <TextField fx:id="subjectField" promptText="Enter subject" />
            </VBox>

            <VBox maxWidth="Infinity" spacing="8.0">
                <Label style="-fx-font-weight: bold;" text="Description" />
                <TextArea fx:id="descriptionArea" prefRowCount="8" promptText="Describe your issue or feedback..." styleClass="text-area" wrapText="true" />
            </VBox>

            <Button maxWidth="Infinity" onAction="#handleSubmit" styleClass="button" text="Submit" />
        </VBox>
    </center>
</BorderPane>

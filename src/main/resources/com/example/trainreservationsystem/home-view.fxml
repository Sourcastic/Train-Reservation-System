<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" prefHeight="800.0" prefWidth="1280.0" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trainreservationsystem.controllers.HomeController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="16.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="24.0" left="24.0" right="16.0" top="24.0" />
            </padding>

            <!-- App title as logo -->
            <TextField fx:id="manageTitleLabel" maxWidth="Infinity" styleClass="title-button app-logo" text="Train Reservation System" />

            <!-- Navigation -->
            <Button fx:id="btnDashboard" maxWidth="Infinity" onAction="#showDashboard" styleClass="sidebar-button" text="Dashboard" />
            <Button fx:id="btnSearch" maxWidth="Infinity" onAction="#showSearch" styleClass="sidebar-button" text="Search &amp; Book" />
            <Button fx:id="btnHistory" maxWidth="Infinity" onAction="#showHistory" styleClass="sidebar-button" text="Booking History" />
            <Button fx:id="btnComplaint" maxWidth="Infinity" onAction="#showComplaint" styleClass="sidebar-button" text="Complaints / Feedback" />

            <Region VBox.vgrow="ALWAYS" />

            <!-- Bottom icons -->
            <HBox spacing="8.0">
                <Button fx:id="manageNotificationButton" onAction="#openNotifications" styleClass="icon-button" text="Notifications" />
                <Button fx:id="manageAccountButton" styleClass="icon-button" text="Account" />
            </HBox>
        </VBox>
    </left>

    <!-- Main content -->
    <center>
        <StackPane fx:id="contentArea" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>

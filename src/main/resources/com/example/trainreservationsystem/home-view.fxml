<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.SearchableComboBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="780.0" minWidth="1340.0" prefHeight="460.0" prefWidth="1280.0" styleClass="combo-box" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trainreservationsystem.HomeController">
   <top>
       <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="100.0" prefWidth="200.0" styleClass="topbar" stylesheets="@stylesheet.css" BorderPane.alignment="CENTER">
           <padding>
               <Insets left="20.0" right="20.0" />
           </padding>
         <Button fx:id="manageTitleLabel" mnemonicParsing="false" styleClass="title-button" text="Train Reservation System" />
         <Button mnemonicParsing="false" styleClass="header-button" stylesheets="@stylesheet.css" text="Search &amp; Book">
            <HBox.margin>
               <Insets left="20.0" />
            </HBox.margin>
         </Button>
         <Button mnemonicParsing="false" styleClass="header-button" text="Booking History" />
         <Button mnemonicParsing="false" styleClass="header-button" text="Complaints/Feedback" />
         <Button mnemonicParsing="false" styleClass="header-button" text="Button" />
         <Button mnemonicParsing="false" styleClass="header-button" text="Button">
            <padding>
               <Insets bottom="20.0" />
            </padding>
         </Button>
           <Region prefHeight="100.0" prefWidth="151.0" HBox.hgrow="ALWAYS" />
         <Button fx:id="manageNotificationButton" accessibleText="Notifications" mnemonicParsing="false" />
           <Button fx:id="manageAccountButton" alignment="CENTER_RIGHT" contentDisplay="TOP" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onMouseClicked="#onManageAccountClick" text="Manage Account" textAlignment="JUSTIFY" HBox.hgrow="ALWAYS">
              <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
              </HBox.margin>
           </Button>
       </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Region prefHeight="200.0" prefWidth="200.0" />
                  <HBox fx:id="manageSearchBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" styleClass="searchBox" HBox.hgrow="ALWAYS">
                     <children>
                        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <SearchableComboBox maxHeight="-Infinity" maxWidth="-Infinity" styleClass="searchable-combobox">
                           <HBox.margin>
                              <Insets right="20.0" />
                           </HBox.margin>
                        </SearchableComboBox>
                        <Button fx:id="manageSwapButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="36.0" prefWidth="44.0" />
                        <SearchableComboBox maxHeight="-Infinity" maxWidth="-Infinity" styleClass="searchable-combobox">
                           <HBox.margin>
                              <Insets left="20.0" right="20.0" />
                           </HBox.margin>
                        </SearchableComboBox>
                        <DatePicker styleClass="date-picker">
                           <HBox.margin>
                              <Insets right="20.0" />
                           </HBox.margin>
                        </DatePicker>
                        <Button fx:id="manageSearchButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="36.0" prefWidth="125.0" text="Search" />
                        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Region>
                     </children>
                  </HBox>
                  <Region nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>

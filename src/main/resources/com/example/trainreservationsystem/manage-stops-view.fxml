<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="800.0" prefWidth="1040.0" spacing="20" style="-fx-background-color: #ECF0F1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trainreservationsystem.controllers.ManageStopsController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    
    <!-- LEFT SECTION: List of Stops -->
    <VBox prefWidth="600" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="All Stops" />
        
        <TableView fx:id="stopsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="80" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="300" text="Stop Name" />
                <TableColumn fx:id="actionColumn" prefWidth="120" text="Action" />
            </columns>
        </TableView>
    </VBox>
    
    <!-- RIGHT SECTION: Add Stop Form -->
    <VBox prefWidth="400" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Add New Stop" />
        
        <VBox spacing="10">
            <Label style="-fx-font-size: 14px; -fx-text-fill: #34495E;" text="Stop Name" />
            <TextField fx:id="stopNameField" promptText="Enter stop name" style="-fx-font-size: 14px; -fx-padding: 10;" />
        </VBox>
        
        <Button fx:id="addStopButton" onAction="#handleAddStop" prefHeight="45" prefWidth="200" style="-fx-background-color: #1ABC9C; -fx-text-fill: white; -fx-font-size: 15; -fx-background-radius: 10;" text="Add Stop" />
        
        <Label fx:id="messageLabel" style="-fx-font-size: 14px; -fx-text-fill: #27AE60;" text="" wrapText="true" />
    </VBox>
    
</HBox>

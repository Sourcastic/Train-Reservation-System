<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trainreservationsystem.controllers.member.booking.HistoryController" stylesheets="/com/example/trainreservationsystem/stylesheet.css">
    <center>
        <VBox alignment="TOP_CENTER" maxWidth="1000.0" spacing="24.0" styleClass="form-card">
            <padding>
                <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
            </padding>
            <Label styleClass="page-title" text="My Bookings" />

            <StackPane VBox.vgrow="ALWAYS">
                <TableView fx:id="historyTable" prefHeight="500.0">
                    <columns>
                        <TableColumn fx:id="trainCol" prefWidth="250.0" text="Train" />
                        <TableColumn fx:id="dateCol" prefWidth="150.0" text="Date" />
                        <TableColumn fx:id="statusCol" prefWidth="100.0" text="Status" />
                        <TableColumn fx:id="actionsCol" prefWidth="200.0" text="Actions" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <VBox fx:id="emptyStateBox" alignment="CENTER" mouseTransparent="true" visible="false" managed="false">
                   <Label text="No bookings found." style="-fx-text-fill: #6c6f85; -fx-font-size: 16px;" />
               </VBox>
            </StackPane>
        </VBox>
    </center>
</BorderPane>

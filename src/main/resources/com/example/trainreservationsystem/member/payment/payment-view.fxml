<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.trainreservationsystem.controllers.member.payment.SimplePaymentController" stylesheets="/com/example/trainreservationsystem/stylesheet.css">
    <center>
        <VBox alignment="TOP_CENTER" maxWidth="1200.0" spacing="24.0" styleClass="payment-container">
            <padding>
                <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER" spacing="12.0">
                <Label fx:id="paymentHeaderIcon" style="-fx-font-size: 32px;"/>
                <Label styleClass="page-title" text="Complete Payment" />
            </HBox>

            <!-- Main Content: Side by Side -->
            <HBox spacing="24.0" alignment="TOP_LEFT">

                <!-- Left Side: Payment Methods Accordion -->
                <VBox spacing="12.0" HBox.hgrow="ALWAYS" maxWidth="600.0">
                    <Label text="Choose Payment Method" styleClass="section-title"/>

                    <Accordion fx:id="paymentAccordion" styleClass="payment-accordion">
                        <panes>
                            <!-- Credit/Debit Card -->
                            <TitledPane fx:id="cardPane" text="Credit/Debit Card" styleClass="payment-pane">
                                <VBox spacing="16.0">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                    </padding>

                                    <GridPane hgap="16.0" vgap="16.0">
                                        <Label text="Card Number" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="field-label"/>
                                        <TextField fx:id="cardNumberField"
                                                 promptText="1234 5678 9012 3456"
                                                 styleClass="modern-field"
                                                 GridPane.rowIndex="0" GridPane.columnIndex="1"
                                                 GridPane.columnSpan="2"/>

                                        <Label text="Cardholder Name" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="field-label"/>
                                        <TextField fx:id="cardNameField"
                                                 promptText="John Doe"
                                                 styleClass="modern-field"
                                                 GridPane.rowIndex="1" GridPane.columnIndex="1"
                                                 GridPane.columnSpan="2"/>

                                        <Label text="Expiry Date" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="field-label"/>
                                        <TextField fx:id="expiryField"
                                                 promptText="MM/YY"
                                                 styleClass="modern-field"
                                                 maxWidth="120.0"
                                                 GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                        <Label text="CVV" GridPane.rowIndex="2" GridPane.columnIndex="2" styleClass="field-label"/>
                                        <PasswordField fx:id="cvvField"
                                                     promptText="123"
                                                     styleClass="modern-field"
                                                     maxWidth="80.0"
                                                     GridPane.rowIndex="2" GridPane.columnIndex="3"/>
                                    </GridPane>

                                    <HBox alignment="CENTER">
                                        <Button text="Pay with Card" onAction="#handleCardPayment"
                                                styleClass="payment-method-button" prefWidth="200.0"/>
                                    </HBox>

                                    <HBox spacing="4.0" alignment="CENTER_LEFT">
                                        <Label fx:id="cardHintIcon" style="-fx-font-size: 14px;"/>
                                        <Label text="Test Card: 4242 4242 4242 4242, Exp: 12/25, CVV: 123" styleClass="hint-text"/>
                                    </HBox>
                                </VBox>
                            </TitledPane>

                            <!-- Bank Transfer -->
                            <TitledPane fx:id="bankTransferPane" text="Bank Transfer" styleClass="payment-pane">
                                <VBox spacing="16.0">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                    </padding>

                                    <GridPane hgap="16.0" vgap="16.0">
                                        <Label text="IBAN" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="field-label"/>
                                        <TextField fx:id="ibanField"
                                                 promptText="PK36SCBL0000001123456702"
                                                 styleClass="modern-field"
                                                 GridPane.rowIndex="0" GridPane.columnIndex="1"
                                                 GridPane.columnSpan="2"/>
                                    </GridPane>

                                    <HBox alignment="CENTER">
                                        <Button text="Pay via Bank Transfer" onAction="#handleBankTransferPayment"
                                                styleClass="payment-method-button" prefWidth="200.0"/>
                                    </HBox>

                                    <HBox spacing="4.0" alignment="CENTER_LEFT">
                                        <Label fx:id="bankTransferHintIcon" style="-fx-font-size: 14px;"/>
                                        <Label text="IBAN should be 15-34 alphanumeric characters" styleClass="hint-text"/>
                                    </HBox>
                                </VBox>
                            </TitledPane>

                            <!-- Wallet (Loyalty Points) -->
                            <TitledPane fx:id="walletPane" text="ðŸ’³ Wallet" styleClass="payment-pane">
                                <VBox spacing="16.0" alignment="CENTER">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                    </padding>

                                    <HBox alignment="CENTER" spacing="12.0">
                                        <Label text="ðŸ’³" style="-fx-font-size: 48px;"/>
                                        <VBox alignment="CENTER_LEFT">
                                            <Label text="Loyalty Points Wallet" styleClass="payment-method-title"/>
                                            <Label text="Pay using your loyalty points" styleClass="payment-method-subtitle"/>
                                        </VBox>
                                    </HBox>

                                    <VBox spacing="12.0" styleClass="wallet-info-box">
                                        <padding>
                                            <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                                        </padding>
                                        <HBox spacing="8.0" alignment="CENTER_LEFT">
                                            <Label fx:id="walletInfoIcon" style="-fx-font-size: 16px;"/>
                                            <Label text="Your Balance:" styleClass="info-header"/>
                                        </HBox>
                                        <Label fx:id="loyaltyPointsLabel" styleClass="summary-amount-small" text="Loading..."/>
                                        <Label text="1 point = $1.00" styleClass="info-text"/>
                                    </VBox>

                                    <HBox alignment="CENTER">
                                        <Button text="Pay with Wallet" onAction="#handleWalletPayment"
                                                styleClass="payment-method-button" prefWidth="200.0"/>
                                    </HBox>
                                </VBox>
                            </TitledPane>
                        </panes>
                    </Accordion>
                </VBox>

                <!-- Right Side: Brief Summary -->
                <VBox spacing="16.0" prefWidth="350.0" styleClass="summary-sidebar">
                    <Label text="Booking Summary" styleClass="section-title"/>

                    <VBox spacing="12.0" styleClass="summary-box">
                        <padding>
                            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                        </padding>

                        <VBox spacing="8.0">
                            <Label text="Route" styleClass="summary-label"/>
                            <Label fx:id="journeyLabel" styleClass="summary-value-small" wrapText="true"/>
                        </VBox>

                        <Separator/>

                        <VBox spacing="8.0">
                            <Label text="Date" styleClass="summary-label"/>
                            <Label fx:id="dateLabel" styleClass="summary-value-small"/>
                        </VBox>

                        <Separator/>

                        <HBox spacing="16.0">
                            <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                <Label text="Passengers" styleClass="summary-label"/>
                                <Label fx:id="passengersLabel" styleClass="summary-value-small"/>
                            </VBox>
                            <VBox spacing="8.0">
                                <Label text="Seats" styleClass="summary-label"/>
                                <Label fx:id="seatsLabel" styleClass="summary-value-small"/>
                            </VBox>
                        </HBox>

                        <Separator/>

                        <!-- Discount Code Section -->
                        <VBox spacing="8.0">
                            <Label text="Promo Code" styleClass="summary-label"/>
                            <HBox spacing="8.0">
                                <TextField fx:id="discountCodeField"
                                         promptText="Enter promo code"
                                         styleClass="modern-field"
                                         HBox.hgrow="ALWAYS"/>
                                <Button text="Apply" onAction="#handleApplyDiscount"
                                        styleClass="secondary-button" prefWidth="80.0"/>
                            </HBox>
                            <Label fx:id="discountMessageLabel" styleClass="hint-text" wrapText="true"/>
                        </VBox>

                        <Separator/>

                        <VBox spacing="8.0">
                            <HBox spacing="8.0" alignment="CENTER_LEFT">
                                <Label text="Total Amount" styleClass="summary-label"/>
                                <Label fx:id="discountLabel" styleClass="summary-value-small" text=""/>
                            </HBox>
                            <Label fx:id="amountLabel" styleClass="summary-amount-small"/>
                        </VBox>
                    </VBox>

                    <!-- Security Note -->
                    <HBox alignment="CENTER" spacing="8.0">
                        <Label text="ðŸ”’" style="-fx-text-fill: #2d7a3e;"/>
                        <Label text="Secure payment" styleClass="security-note"/>
                    </HBox>
                </VBox>

            </HBox>

            <!-- Action Buttons -->
            <HBox spacing="16.0" alignment="CENTER">
                <Button text="â† Back" onAction="#handleCancel"
                        styleClass="secondary-button" prefWidth="150.0"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>

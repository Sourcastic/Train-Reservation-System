<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.trainreservationsystem.controllers.NotificationController"
            prefWidth="400.0" prefHeight="600.0">

    <top>
        <VBox spacing="12.0" styleClass="notification-header">
            <padding>
                <Insets bottom="16.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="12.0">
                <Label text="ðŸ””" style="-fx-font-size: 24px;"/>
                <Label text="Notifications" styleClass="notification-title"/>
                <HBox HBox.hgrow="ALWAYS"/>
                <Button fx:id="clearAllBtn" text="Clear All" styleClass="clear-button" onAction="#handleClearAll"/>
            </HBox>

            <HBox spacing="16.0">
                <Button fx:id="allTab" text="All" styleClass="tab-button, tab-active" onAction="#showAll"/>
                <Button fx:id="bookingsTab" text="Bookings" styleClass="tab-button" onAction="#showBookings"/>
                <Button fx:id="paymentsTab" text="Payments" styleClass="tab-button" onAction="#showPayments"/>
                <Button fx:id="alertsTab" text="Alerts" styleClass="tab-button" onAction="#showAlerts"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="notification-scroll">
            <VBox fx:id="notificationList" spacing="8.0">
                <padding>
                    <Insets bottom="16.0" left="16.0" right="16.0" top="8.0" />
                </padding>
                <!-- Notifications will be added dynamically -->
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <VBox fx:id="emptyState" alignment="CENTER" spacing="12.0"
              visible="false" managed="false" styleClass="empty-state">
            <padding>
                <Insets bottom="40.0" left="20.0" right="20.0" top="40.0" />
            </padding>
            <Label text="ðŸ“­" style="-fx-font-size: 48px;"/>
            <Label text="No notifications yet" styleClass="empty-title"/>
            <Label text="Your notifications will appear here" styleClass="empty-subtitle"/>
        </VBox>
    </bottom>

</BorderPane>

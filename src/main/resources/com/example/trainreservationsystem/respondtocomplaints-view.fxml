<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.trainreservationsystem.controllers.RespondToComplaintsController"
            prefWidth="1280" prefHeight="800">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox prefWidth="240" spacing="20" style="-fx-background-color: #2C3E50;" alignment="TOP_CENTER">
            <padding>
                <Insets top="30" bottom="20" left="15" right="15"/>
            </padding>

            <Label text="Staff Panel"
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>

            <Separator/>

            <!-- Navigation Buttons -->
            <Button text="Dashboard" prefWidth="200" prefHeight="45"
                    style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-font-size: 15; -fx-background-radius: 10;"
                    fx:id="btnGoDashboard"/>

            <Button text="Handle Complaints" prefWidth="200" prefHeight="45"
                    style="-fx-background-color: #1ABC9C; -fx-text-fill: white; -fx-font-size: 15; -fx-background-radius: 10;"
                    fx:id="btnComplaints"/>

            <Button text="Confirm Bookings" prefWidth="200" prefHeight="45"
                    style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-font-size: 15; -fx-background-radius: 10;"
                    fx:id="btnConfirmBookings"/>

            <Button text="Ticket Validation" prefWidth="200" prefHeight="45"
                    style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-font-size: 15; -fx-background-radius: 10;"
                    fx:id="btnTicketValidation"/>

            <Button text="Notifications" prefWidth="200" prefHeight="45"
                    style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-font-size: 15; -fx-background-radius: 10;"
                    fx:id="btnNotifications"/>

            <Button text="Update Train Status" prefWidth="200" prefHeight="45"
                    style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-font-size: 15; -fx-background-radius: 10;"
                    fx:id="btnTrainStatus"/>

            <VBox VBox.vgrow="ALWAYS"/>

            <Button text="Logout" prefWidth="200" prefHeight="45"
                    style="-fx-background-color: #C0392B; -fx-text-fill: white; -fx-font-size: 15; -fx-background-radius: 10;"
                    fx:id="btnLogout"/>
        </VBox>
    </left>


    <!-- MAIN CONTENT AREA -->
    <center>
        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">
            <children>

                <!-- Complaints Table -->
                <TableView fx:id="complaintTable" prefWidth="600" prefHeight="720"
                           style="-fx-background-radius: 10; -fx-border-radius: 10;">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                        <TableColumn fx:id="colCustomer" text="Customer" prefWidth="150"/>
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                        <TableColumn fx:id="colMessage" text="Complaint" prefWidth="300"/>
                    </columns>
                </TableView>

                <!-- Complaint Detail + Response -->
                <VBox spacing="15" alignment="TOP_CENTER"
                      prefWidth="600" prefHeight="720"
                      style="-fx-background-color: white; -fx-padding: 30;
                             -fx-background-radius: 15;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 4);">

                    <Label fx:id="lblComplaintDetails"
                           text="Select a complaint to see details."
                           wrapText="true"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                    <TextArea fx:id="txtResponse"
                              promptText="Type your response here..."
                              prefHeight="350"
                              wrapText="true"
                              style="-fx-font-size: 15px; -fx-background-radius: 10;"/>

                    <Button fx:id="btnSubmitResponse" text="Submit Response"
                            prefWidth="220" prefHeight="45"
                            style="-fx-background-color: #3498DB; -fx-text-fill: white;
                                   -fx-font-size: 16; -fx-background-radius: 12;"/>
                </VBox>

            </children>
        </HBox>
    </center>

</BorderPane>

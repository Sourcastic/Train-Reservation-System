<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.SearchableComboBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trainreservationsystem.controllers.SearchController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label styleClass="searchbox-label" text="Search Trains" />
      <HBox alignment="CENTER" spacing="10.0" styleClass="searchBox">
         <children>
            <SearchableComboBox fx:id="sourceCombo" promptText="Source" />
            <SearchableComboBox fx:id="destinationCombo" promptText="Destination" />
            <DatePicker fx:id="datePicker" promptText="Date" />
            <Button mnemonicParsing="false" onAction="#handleSearch" text="Search" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
      <TableView fx:id="resultsTable" prefHeight="400.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="sourceCol" prefWidth="150.0" text="Source" />
          <TableColumn fx:id="destCol" prefWidth="150.0" text="Destination" />
          <TableColumn fx:id="timeCol" prefWidth="100.0" text="Time" />
          <TableColumn fx:id="priceCol" prefWidth="100.0" text="Price" />
        </columns>
      </TableView>
   </children>
</VBox>


<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.SearchableComboBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trainreservationsystem.controllers.search.SearchController">
   <center>
      <VBox alignment="TOP_CENTER" maxWidth="900.0" spacing="24.0" styleClass="form-card">
         <padding>
            <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
         </padding>
         <children>
            <Label styleClass="page-title" text="Search Trains" />
            <HBox alignment="CENTER_LEFT" spacing="16.0" styleClass="searchBox">
               <children>
                  <SearchableComboBox fx:id="sourceCombo" prefWidth="220.0" promptText="From" styleClass="searchable-combobox" />
                  <SearchableComboBox fx:id="destinationCombo" prefWidth="220.0" promptText="To" styleClass="searchable-combobox" />
                  <DatePicker fx:id="datePicker" prefWidth="180.0" promptText="Departure date" styleClass="date-picker" />
                  <Button mnemonicParsing="false" onAction="#handleSearch" styleClass="button" text="Search trains" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>

            <StackPane VBox.vgrow="ALWAYS">
               <TableView fx:id="resultsTable" prefHeight="400.0" prefWidth="200.0">
                 <columns>
                   <TableColumn fx:id="sourceCol" prefWidth="180.0" text="From" />
                   <TableColumn fx:id="destCol" prefWidth="180.0" text="To" />
                   <TableColumn fx:id="timeCol" prefWidth="120.0" text="Departure" />
                   <TableColumn fx:id="priceCol" prefWidth="100.0" text="Price" />
                   <TableColumn fx:id="actionCol" prefWidth="120.0" text="Action" />
                 </columns>
                  <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
               </TableView>
               <VBox fx:id="emptyStateBox" alignment="CENTER" mouseTransparent="true" visible="false" managed="false">
                   <Label text="Start by searching for a route above." style="-fx-text-fill: #6c6f85; -fx-font-size: 16px;" />
               </VBox>
            </StackPane>
         </children>
      </VBox>
   </center>
</BorderPane>

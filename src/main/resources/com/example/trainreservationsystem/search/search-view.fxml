<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.SearchableComboBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trainreservationsystem.controllers.search.SearchController">
   <top>
      <VBox alignment="TOP_CENTER" spacing="0.0" styleClass="form-card">
         <padding>
            <Insets bottom="24.0" left="32.0" right="32.0" top="24.0" />
         </padding>
         <children>
            <Label styleClass="page-title" text="Search Trains" />
            <HBox alignment="CENTER_LEFT" spacing="16.0" styleClass="searchBox">
               <children>
                  <SearchableComboBox fx:id="sourceCombo" prefWidth="220.0" promptText="From" styleClass="searchable-combobox" />
                  <SearchableComboBox fx:id="destinationCombo" prefWidth="220.0" promptText="To" styleClass="searchable-combobox" />
                  <DatePicker fx:id="datePicker" prefWidth="180.0" promptText="Departure date" styleClass="date-picker" />
                  <Button mnemonicParsing="false" onAction="#handleSearch" styleClass="button" text="Search trains" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox fx:id="resultsArea" alignment="TOP_CENTER" spacing="16.0" style="-fx-background-color: transparent;" visible="false" managed="false">
         <padding>
            <Insets bottom="24.0" left="32.0" right="32.0" top="24.0" />
         </padding>
         <children>
            <!-- Search Summary Bar -->
            <HBox alignment="CENTER_LEFT" spacing="16.0" styleClass="search-summary-bar">
               <children>
                  <Label fx:id="searchSummaryLabel" text="" styleClass="search-summary-text" />
                  <HBox HBox.hgrow="ALWAYS" />
                  <Label text="Sorted By:" styleClass="sort-label" />
                  <ComboBox fx:id="sortCombo" prefWidth="150.0" styleClass="sort-combobox" />
               </children>
            </HBox>

            <!-- Results Container -->
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;">
               <VBox fx:id="resultsContainer" spacing="16.0" style="-fx-background-color: transparent;">
                  <padding>
                     <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                  </padding>
               </VBox>
            </ScrollPane>

            <!-- Empty State -->
            <StackPane fx:id="emptyStatePane" alignment="CENTER" visible="false" managed="false">
               <VBox alignment="CENTER" spacing="8.0">
                  <Label text="No trains found for this route." style="-fx-text-fill: #6c6f85; -fx-font-size: 16px;" />
               </VBox>
            </StackPane>
         </children>
      </VBox>
   </center>
</BorderPane>

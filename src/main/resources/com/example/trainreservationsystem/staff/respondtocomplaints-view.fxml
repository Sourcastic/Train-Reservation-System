<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox spacing="20" alignment="CENTER" style="-fx-padding: 20;" stylesheets="/com/example/trainreservationsystem/stylesheet.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trainreservationsystem.controllers.staff.RespondToComplaintsController">
    <children>

        <!-- Complaints Table -->
        <TableView fx:id="complaintTable" prefWidth="600" prefHeight="720"
                   style="-fx-background-radius: 10; -fx-border-radius: 10;">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colCustomer" text="Customer" prefWidth="150"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                <TableColumn fx:id="colMessage" text="Complaint" prefWidth="300"/>
            </columns>
        </TableView>

        <!-- Complaint Detail + Response -->
        <VBox spacing="15" alignment="TOP_CENTER"
              prefWidth="600" prefHeight="720"
              style="-fx-background-color: white; -fx-padding: 30;
                     -fx-background-radius: 15;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 4);">

            <Label fx:id="lblComplaintDetails"
                   text="Select a complaint to see details."
                   wrapText="true"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <TextArea fx:id="txtResponse"
                      promptText="Type your response here..."
                      prefHeight="350"
                      wrapText="true"
                      style="-fx-font-size: 15px; -fx-background-radius: 10;"/>

            <Button fx:id="btnSubmitResponse" text="Submit Response"
                    prefWidth="220" prefHeight="45"
                    style="-fx-background-color: #3498DB; -fx-text-fill: white;
                           -fx-font-size: 16; -fx-background-radius: 12;"/>
        </VBox>

    </children>
</HBox>
